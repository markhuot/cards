{% extends "app" %}

{% set pageTitle = "Cards" %}

{% block content %}
<div class="layout-split-2--detail page-alt2">
    <div class="column">
        <div class="card-detail box-shadow" box="2" spacing="4">
            <div class="alpha">Login</div>
            <div class="panel-body">
                <form class="form-horizontal" role="form" method="POST" action="{{ url('/login') }}" spacing="2">
                    {{ csrf_field() }}

                    <div class="{{ errors.has('email') ? ' has-error' : '' }}" spacing=".5">
                        <p><label for="email" class="label">E-Mail Address</label></p>

                        <div class="col-md-6">
                            <input id="email" type="email" class="user-input" box name="email" value="{{ old('email') }}" autofocus>

                            {%  if errors.has('email') %}
                            <span class="help-block">
                                    <strong>{{ errors.first('email') }}</strong>
                                </span>
                            {% endif %}
                        </div>
                    </div>

                    <div class="{{ errors.has('password') ? ' has-error' : '' }}" spacing=".5">
                        <p><label for="password" class="label">Password</label></p>

                        <div class="col-md-6">
                            <input id="password" type="password" class="user-input" box name="password">

                            {% if errors.has('password') %}
                            <span class="help-block">
                                    <strong>{{ errors.first('password') }}</strong>
                                </span>
                            {% endif %}
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-6 col-md-offset-4">
                            <div class="checkbox meta">
                                <label>
                                    <input type="checkbox" name="remember"> Remember Me
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-8 col-md-offset-4">
                            <button type="submit" class="button">
                                Login
                            </button>

                            <a class="button plain" href="{{ url('/password/reset') }}">
                                Forgot Your Password?
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="column" box="2" spacing>
        <h2 class="card-detail__sub-head">First time?</h2>
        <p class="longform"><a href="/register">Register for an account</a> to make all the cards.</p>
    </div>
</div>
{% endblock content %}
